<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- required to contrast the dark buttons -->
        <item name="android:navigationBarColor">@color/default_background_light</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/default_background_light</item>
        <item name="colorPrimaryDark">@color/default_background_light</item>
        <item name="android:statusBarColor">@color/default_background_light</item>
        <item name="android:navigationBarColor">@color/default_background_light</item>
    </style>

</resources>
